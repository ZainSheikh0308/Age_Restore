<!-- For now, creating an SVG that can be used -->
<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 180 180" width="180" height="180">
  <defs>
    <linearGradient id="appleDrop" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#ef4444"/>
      <stop offset="50%" style="stop-color:#dc2626"/>
      <stop offset="100%" style="stop-color:#b91c1c"/>
    </linearGradient>
    <filter id="appleShadow" x="-20%" y="-20%" width="140%" height="140%">
      <feDropShadow dx="0" dy="2" stdDeviation="3" flood-color="#000000" flood-opacity="0.15"/>
    </filter>
  </defs>
  
  <!-- Rounded background for Apple devices -->
  <rect x="0" y="0" width="180" height="180" rx="40" ry="40" fill="#ffffff"/>
  
  <!-- Beautiful large drop -->
  <path d="M90 30 C60 50, 50 70, 50 100 C50 130.928, 66.072 150, 90 150 C113.928 150, 130 130.928, 130 100 C130 70, 120 50, 90 30 Z" 
        fill="url(#appleDrop)" 
        filter="url(#appleShadow)"/>
  
  <!-- Large highlight -->
  <ellipse cx="78" cy="90" rx="12" ry="25" fill="rgba(255,255,255,0.3)" opacity="0.9"/>
</svg>


